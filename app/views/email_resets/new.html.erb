<% content_for :errors do %>
  <%= render 'shared/error_messages' %>
<% end %>

<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">Change Email</div>
    <div class="panel-body">
      <%= form_for(:email_reset, url: email_resets_path) do |f| %>
        <%= f.label :new_email %>
        <%= f.email_field :new_email, class: 'form-control' %>

        <%= f.submit "Update Email", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
