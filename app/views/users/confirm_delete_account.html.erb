<% provide(:page_title, 'Delete Account') %>

<% content_for :errors do %>
  <%= render 'shared/error_messages' %>
<% end %>

<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">Delete Account</div>
    <div class="panel-body">
      <%= form_tag(controller: 'users', action: 'delete_account', method: 'post') do %>
        <%= label_tag :password %>
        <%= password_field_tag 'user[password]', '', class: 'form-control' %>

        <div class="btn-lft"><a href="<%= account_path %>" class="btn btn-default">Back</a></div>
        <div class="btn-rgt"><%= submit_tag "Submit", class: "btn btn-primary btn-rgt" %></div>
      <% end %>
    </div>
  </div>
</div>
