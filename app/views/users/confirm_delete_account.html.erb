<%= render 'shared/error_messages' %>

<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">Delete Account</div>
    <div class="panel-body">
      <%= form_tag(controller: 'users', action: 'delete_account', method: 'post') do %>
        <%= label_tag :password %>
        <%= password_field_tag 'user[password]', '', class: 'form-control' %>

        <%= submit_tag 'Delete account', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
