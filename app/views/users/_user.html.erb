<tr class="<%= user.admin ? "info" : "" %>">
  <th scope="row"><%= user.id %></th>
  <td><%= link_to user.email, user %></td>
  <td><%= user.name %></td>
  <% if !current_user?(user) %>
    <td><%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" } %></td>
  <% else %>
    <td></td>
  <% end %>
</tr>
