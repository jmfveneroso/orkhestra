<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:page_title)) %></title>
    <%= csrf_meta_tags %>

    <%= yield(:css) %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:200,200i,300,300i,400,400i,600,600i,700,700i,900,900i" rel="stylesheet">
    <%= render 'shared/globals' %>

    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <% flash.each do |message_type, message| %>
      <div class="close-this alert alert-<%= message_type %> alert-dismissable" style="position:absolute;bottom:20%;width:100%;height:auto;text-align: center;font-family: Source Sans Pro;font-size: 14px">
        <div style="position:relative;width: 302px;margin-left: auto;margin-right: auto">
          <div class="container" style="position:absolute;margin:auto;width:300px;height:auto;text-align: center;background-color: white;color:black;border:1px solid rgb(200,60,60);padding-top: 10px;padding-bottom: 10px;box-shadow: rgb(200, 60, 60) -5px 5px">
            <%= message %>
          </div>
          <a href="javascript:close(this)" class="close" data-dismiss="alert" aria-label="close" title="close" style="position:relative;left:140px;top:-8px;font-size: 30px;text-decoration: none;color:rgb(200,60,60)">Ã—</a>
        </div>
      </div>
      <script type="text/javascript">
        function close(element) {
          $(".close-this").remove();
        }
      </script>
    <% end %>
    <%= yield(:errors) %>

    <%= yield %>
  </body>
</html>
